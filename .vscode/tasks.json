{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build-catalog-api: debug",
			"dependsOn": [
				"build"
			],
			"dockerBuild": {
				"tag": "catalog_api-image:debug",
				"target": "base",
				"dockerfile": "${workspaceFolder}/src/Services/Catalog/Catalog.API/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			},
			"netCore": {
				"appProject": "${workspaceFolder}/src/Services/Catalog/Catalog.API/Catalog.API.csproj"
			}
		},
		{
			"type": "docker-build",
			"label": "docker-build-catalog-api: release",
			"dependsOn": [
				"build"
			],
			"dockerBuild": {
				"tag": "catalog_api-image:release",
				"dockerfile": "${workspaceFolder}/src/Services/Catalog/Catalog.API/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			},
			"netCore": {
				"appProject": "${workspaceFolder}/src/Services/Catalog/Catalog.API/Catalog.API.csproj"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run-catalog-api: debug",
			"dependsOn": [
				"docker-build-catalog-api: debug"
			],
			"dockerRun": {
				"containerName": "catalog_api-container",
				"ports": [
					{
						"containerPort": 8080,
						"hostPort": 6001
					}
				],
			},
			"netCore": {
				"appProject": "${workspaceFolder}/src/Services/Catalog/Catalog.API/Catalog.API.csproj",
				"enableDebugging": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run-catalog-api: release",
			"dependsOn": [
				"docker-build-catalog-api: release"
			],
			"dockerRun": {},
			"netCore": {
				"appProject": "${workspaceFolder}/src/Services/Catalog/Catalog.API/Catalog.API.csproj"
			}
		}
	]
}